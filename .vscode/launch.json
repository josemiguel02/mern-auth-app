{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Debug React App",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/client/node_modules/**"
      ]
    },
    {
      "type": "node",
      "name": "Debug Express App",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/server/node_modules/**"
      ]
    },
    {
      "command": "yarn dev",
      "name": "Debug Express App with command",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/server"
    }
  ]
}
